/**index.wxss**/
page {
  background: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}
.container{
  width: 100%;
  min-height: 100%;
  position: relative;
}
.content{
  width: 95%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  position: relative;
}

.timeNumber{
  color: yellow;
  padding-left: 5rpx;
  padding-right: 5rpx;
}
.tuanGouTime{
  height: 30rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
  float: left;
  color: #ffffff;
}
.resizeTime{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  padding-right: 10rpx;
}
.shops{
  margin-top: 30rpx;
  height:200rpx;
  background: #f6f6f6;
  border-radius: 20rpx;
}
.personImg{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.goodList{
  font-size:26rpx;
  height: 100%;
}
.navigationBtn{
  font-size: 20rpx;
  line-height: 100rpx;
  text-align: center;
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  left: 20rpx;
  bottom: 350rpx;
  z-index: 1;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.shareView{
  position: absolute;
  border-radius: 100rpx;
  width: 100rpx;
  height: 100rpx;
  left: 20rpx;
  bottom: 200rpx;
  z-index: 1;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}
.shareBtn{
  position: relative;
  width: 60rpx;
  height: 60rpx;
}
.shareFont{
  width: 60rpx;
  font-size: 22rpx;
  text-align: center;
}
.moneyTar{
  position: absolute;
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  bottom: 0;
  display: flex;
  align-items: center;
}
.moneyImg{
  padding-left: 20rpx;
  width: 10%;
}
.recycleImg{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}
.totalMoney{
  width:60%;
  color: red;
  padding-left: 20rpx;
  line-height: 100rpx;
}
.accountBtn{
  width: 30%;
  float: right;
}
.accountMoney{
  border-radius: 100rpx;
  background: green;
}